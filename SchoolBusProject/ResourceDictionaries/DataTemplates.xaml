    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:StudentsViewModel}">
        <pageViews:StudentsView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:ParentsViewModel}">
        <pageViews:ParentsView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:HolidaysViewModel}">
        <pageViews:HolidaysView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:DriversViewModel}">
        <pageViews:DriversView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:RidesViewModel}">
        <pageViews:RidesView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:CreateRideViewModel}">
        <pageViews:CreateRideView/>
    </DataTemplate>
    
</ResourceDictionary>